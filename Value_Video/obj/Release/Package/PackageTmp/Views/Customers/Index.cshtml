            });


            $("#customers").on("click",
                ".js-delete",
                function() {

                    var $button = $(this);
                    var $idval = $button.attr("data-customerid");

                    var $url = "/api/Customers/" + $idval;

                    bootbox.confirm("are you sure you want to delete this customer?",
                        function(result) {

                            if (result) {

                                $.ajax($url,
                                {
                                    type: "DELETE",
                                    success: function() {
                                        
                                       table.row($button.parents("tr")).remove().draw();
                                    }

                                });


                            }


